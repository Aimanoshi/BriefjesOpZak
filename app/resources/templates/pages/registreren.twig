{% extends 'layout/mainAuth.twig' %}

{% block pageContent %}
<body>
<div class="container-fluid">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-8 col-md-6 col-lg-6">
            <div class="card">
                <div class="card-body">
                    <div>
                        <figure>
                            <img src="/images/foto2.0.jpg">
                            <div class="centered"><h3>WELKOM BIJ BRIEF OP ZAK</h3></div>
                        </figure>
                    </div>
                    {% include 'partials/errors.twig' %}

                    <form class="" action="/register" method="POST" enctype="multipart/form-data"
                          novalidate="">
                        <!--Email-->
                        <div class="form-group">
                            <label>Email<span>*</span></label>
                            <input type="text" class="form-control" value="{{ email }}" name="email" placeholder="Email"
                                   required="required">
                        </div>

                        <!--Wachtwoord-->
                        <div class="form-group">
                            <label>Wachtwoord<span>*</span></label>
                            <input type="password" class="form-control" value="" name="wachtwoord"
                                   placeholder="Wachtwoord" required="required">
                        </div>

                        <!--rol-->
                        <div class="form-group">
                            <label for="rol">Rol<span>*</span></label>
                            <select id="rol" class="form-control custom-select" name="rol" required="required">
                                <option value="0">Kies een rol</option>
                                {% for rolKeuze in rollen %}
                                    <option value="{{ rolKeuze.rol }}"{% if rolKeuze.rol == rol %} selected="selected" {% endif %}>{{ rolKeuze.rol }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <!--Korte beschrijving-->
                        <div class="form-group">
                            <label>Korte beschrijving<span>*</span></label>
                            <textarea value="" class="form-control" name="kort"
                                      placeholder="Korte beschrijving bv. Mama van Lien B. "
                                      required="required">{{ kort }}</textarea>
                        </div>

                        <!--submit button-->
                        <input type="hidden" name="moduleAction" value="add-persoon"/>
                        <button type="submit" class="btn btn-outline-primary btn-block" value="registreer"
                                name="submit">
                            Registreer
                        </button>
                        <p class="text-center mt-2">Heb je al een account ?<a href="inloggen.php"> Log dan in</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
{% endblock %}

